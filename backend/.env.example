# ===========================================
# Alert System Backend - Environment Variables
# ===========================================

# Database (Supabase Pooler)
# Format: postgresql://postgres.[project-ref]:[password]@aws-1-[region].pooler.supabase.com:5432/postgres
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-1-ap-northeast-1.pooler.supabase.com:5432/postgres

# Supabase
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# App
NODE_ENV=development
PORT=3001
USE_SQLITE=true

# Authentication
JWT_SECRET=your-jwt-secret

# Redis (for BullMQ - optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# External APIs
AIR_QUALITY_API_KEY=your-air-quality-api-key
SUBWAY_API_KEY=your-subway-api-key
# WEATHER_API_KEY=your-weather-api-key

# Web Push (VAPID)
# VAPID_PUBLIC_KEY=your-vapid-public-key
# VAPID_PRIVATE_KEY=your-vapid-private-key

# Solapi (알림톡)
# https://console.solapi.com 에서 발급
SOLAPI_API_KEY=your-solapi-api-key
SOLAPI_API_SECRET=your-solapi-api-secret
SOLAPI_PF_ID=your-kakao-channel-pfid
SOLAPI_TEMPLATE_ID=your-alimtalk-template-id

# SQLite (로컬 개발용)
SQLITE_DATABASE=./database.sqlite
