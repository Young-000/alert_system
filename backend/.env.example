# Database
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
DB_SYNCHRONIZE=false

# Supabase
SUPABASE_URL=https://[project-ref].supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# External APIs
AIR_QUALITY_API_KEY=your-air-quality-api-key
WEATHER_API_KEY=your-weather-api-key

# Push Notifications (Web Push / VAPID)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Authentication
JWT_SECRET=your-jwt-secret

# Solapi (Kakao Alimtalk)
# https://console.solapi.com 에서 발급
SOLAPI_API_KEY=your-solapi-api-key
SOLAPI_API_SECRET=your-solapi-api-secret
SOLAPI_PF_ID=your-kakao-channel-pfid
SOLAPI_TEMPLATE_ID=your-alimtalk-template-id

# Optional
NODE_ENV=development
PORT=3000
QUEUE_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
